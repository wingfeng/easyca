{{define "newca"}}
<h1>根证书信息</h1>
<form>
    <div class="form-group">
      <label for="exampleInputEmail1">证书名称：</label>
      <input type="text" class="form-control" id="exampleInputEmail1" placeholder="idx.local Enterprise Root CA">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">有效期(天):</label>
      <input type="number" class="form-control" id="exampleInputPassword1" placeholder="证书有效期(365)">
