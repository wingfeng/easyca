{{define "server"}}
<h1>服务器证书信息</h1>
<form accept="server" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">DNS名称：</label>
      <input type="text" class="form-control" id="san" name="san" placeholder="*.qqs-cn.gz">
      <label for="exampleInputEmail1">申请人邮箱：</label>
      <input type="email" class="form-control" id="san" name="san" placeholder="*.qqs-cn.gz">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">有效期(天):</label>
      <input type="number" class="form-control" id="exampleInputPassword1" placeholder="证书有效期(365)">
    </div>
    <button type="submit" class="btn btn-default">提交</button>
  </form>

{{end}}